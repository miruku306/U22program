<body>
  <div class="container">
    <h1>ğŸ§  LINEçˆ†æ’ƒãã‚“<br>å›ã®è„³ã‚’ç ´å£Šã—ã¡ã‚ƒã†ãğŸ’›</h1>

    <div class="input-group">
      <input id="taskInput" type="text" placeholder="ã‚„ã‚‹ã“ã¨ã‚’å…¥åŠ›..." />
      <input id="dateInput" type="date" />
      <input id="timeInput" type="time" />
      <button onclick="addTask()">è¿½åŠ </button>
    </div>

    <div id="taskList"></div>
  </div>

  <script>
    const taskInput = document.getElementById('taskInput');
    const dateInput = document.getElementById('dateInput');
    const timeInput = document.getElementById('timeInput');
    const taskList = document.getElementById('taskList');
    let tasks = [];

    window.onload = () => {
      const saved = localStorage.getItem('tasks');
      if (saved) {
        tasks = JSON.parse(saved);
        renderTasks();
      }
    };

    function saveTasks() {
      localStorage.setItem('tasks', JSON.stringify(tasks));
    }

    function addTask() {
      const content = taskInput.value.trim();
      const date = dateInput.value;
      const time = timeInput.value;

      if (!content || !date || !time) {
        alert(\"ã™ã¹ã¦ã®é …ç›®ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚");
        return;
      }

      const deadline = `${date} ${time}`;
      const task = {
        id: Date.now(),
        content,
        deadline
      };

      tasks.unshift(task);
      taskInput.value = '';
      dateInput.value = '';
      timeInput.value = '';
      saveTasks();
      renderTasks();
    }

    function deleteTask(id) {
      tasks = tasks.filter(task => task.id !== id);
      saveTasks();
      renderTasks();
    }

    function renderTasks() {
      taskList.innerHTML = '';
      tasks.forEach(task => {
        const div = document.createElement('div');
        div.className = 'task';
        div.innerHTML = `
          <div class="task-content">
            <strong>${task.content}</strong>
            <small>ç· åˆ‡: ${task.deadline}</small>
          </div>
          <button class="delete" onclick="deleteTask(${task.id})">å‰Šé™¤</button>
        `;
        taskList.appendChild(div);
      });
    }
  </script>
