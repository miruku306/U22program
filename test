<body>

  <h1>LINE爆撃くん（原型＋締切付き）</h1>

  <div class="input-group">
    <input id="taskInput" type="text" placeholder="タスク内容..." />
    <input id="dateInput" type="date" />
    <input id="timeInput" type="time" />
    <button onclick="addTask()">追加</button>
  </div>

  <div id="taskList"></div>

  <script>
    const taskInput = document.getElementById('taskInput');
    const dateInput = document.getElementById('dateInput');
    const timeInput = document.getElementById('timeInput');
    const taskList = document.getElementById('taskList');
    let tasks = [];

    function addTask() {
      const content = taskInput.value.trim();
      const date = dateInput.value;
      const time = timeInput.value;

      if (!content || !date || !time) {
        alert(\"タスク、日付、時刻すべてを入力してください。");
        return;
      }

      const deadline = `${date} ${time}`;
      const task = {
        id: Date.now(),
        content,
        deadline
      };

      tasks.unshift(task);
      taskInput.value = '';
      dateInput.value = '';
      timeInput.value = '';
      renderTasks();
    }

    function deleteTask(id) {
      tasks = tasks.filter(task => task.id !== id);
      renderTasks();
    }

    function renderTasks() {
      taskList.innerHTML = '';
      tasks.forEach(task => {
        const div = document.createElement('div');
        div.className = 'task';
        div.innerHTML = `
          <div class="task-content">
            <strong>${task.content}</strong><br/>
            <small>締切: ${task.deadline}</small>
          </div>
          <button class="delete" onclick="deleteTask(${task.id})">削除</button>
        `;
        taskList.appendChild(div);
      });
    }
  </script>

</body>
</html>
